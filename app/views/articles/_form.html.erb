<%= form_for @article, :html => { :multipart => true } do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h4><%= @article.errors.count.to_s+"个错误" %> :</h4>
      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= format_error(msg) %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_id, "选择类别" %>
    <%= f.select :category_id, collect_article_categories_for_select, :selected => 7 %>
  </div>

  <div class="field">
    <%= f.label :title, "标题(1到100字)" %>
    <%= f.text_field :title, :size => 95, :class => "input-xxlarge" %>
  </div>

  <div class="field">
    <%= f.label :content, "内容(1到10万字)" %>
    <%= f.text_area :content, :size => "82x15", :class => "input-xxlarge"%>
  </div>

  <div class="field">
    <%= f.label :description, "描述(1到10万字)" %>
    <%= f.text_area :description, :size => "82x5", :class => "input-xxlarge" %>
  </div>

  <div class="field">
    <%= f.label :picture, "图片(添加一张图片)" %>
    <%= f.file_field :picture  %>
  </div>

  <!-- TODO:当你点击选择附件时，回调记录content里面的焦点。当完成选择的时候，自动在那个焦点地方生成<picture> -->
  <div class="actions">
    <%= f.submit "提交", :class => "btn btn-primary ie6-btn" %>
		<%= link_to '取消', topics_path, :class => "btn cancel" %>

  </div>

<% end %>

