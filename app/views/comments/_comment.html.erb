<div class="topic_user_photo">
	<%= image_tag comment.user.photo.url(:thumb) %>
</div>
<div class="topic_meta">发布:<%= link_to comment.user.nick_name, comment.user %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;时间:<%= comment.created_at.to_date.to_s %>
</div>
<br />
<div class="comment_content">
	<%= simple_format comment.content %>
</div>
<div class="topic_edit_bar">
	<% if can_delete?(comment) %>
		<%= link_to '删除', comment, :data => { :confirm => '确定删除' }, method: :delete %>
	<% end %>
</div>
<hr />
