<% content_for :title,"所有小组-泡妞学网" %>
<% content_for :keywords,"泡妞小组列表,所有小组" %>
<% content_for :description,"泡妞学网小组列表,每天推出一个小组." %>


<div id="new_article_bar">
	<span id="notice"><%= flash[:notice] || flash.now[:notice] %></span>
	<% if is_admin? %> 			
		<%= link_to '创建组', new_group_path %>
	<% end %>
</div>

<div class="box articles_box">
	<h1>所有小组</h1>
	<div id="groups">		
		<% @groups.each do |group| %>
			<%= link_to image_tag(group.image.url(:thumb), :class => "image_class"), group %>					
			
			<h2 class= "index_organization_title"><%= link_to group.name, group %></h2>
			<div class="index_organization_description"><%= truncate(group.description, :length => 55) %></div><br />
			创建时间:<%= group.created_at.to_date.to_s %>
			<span class="meta_space">创建者:<%= link_to group.user.nick_name, :root %></span>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<% if is_admin? %>
				<%= link_to '编辑', edit_group_path(group) %>
				<%= link_to '删除', group, :data => { :confirm => '确定删除?' }, method: :delete %>
			<% end %>
			<hr />
		<% end %>
	</div>
</div>


	


