<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "错误") %> :</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_id, "选择阶段" %><br />
    <%= f.select :category_id, collect_note_categories_for_select %>
  </div>

  <div class="field">
    <%= f.label :content, "内容(10到500字)" %><br />
    <%= f.text_area :content, :size  => "82x8" %>
  </div>
  <div class="actions">
    <%= f.submit "写好了,提交" %>
  </div>
<% end %>

