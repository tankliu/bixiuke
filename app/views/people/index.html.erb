<% content_for :title,"泡妞学网-所有学员" %>
<% content_for :keywords,"话术,惯例库,追女孩子的技巧,追女孩子的短信,追女孩子的话,追女孩子的方法,追女生,追女生技巧" %>
<% content_for :description,"泡妞学网,所有学员,积分排行,最新加入,按城市排行." %>

<div class="box">
	<h2>泡妞学网学员</h2>
	<% if notice %>
	<div id="notice"><%= notice %></div>
	<% end %>
	<!-- <div class="order_way"> -->
	<%= link_to "积分排行", people_path(:order_way => "score") %>&nbsp;|&nbsp;

	<%= link_to "最新加入", people_path(:order_way => "join_time") %>&nbsp;|&nbsp;

	<%= link_to "按城市排序", people_path(:order_way => "city") %>
	<br /><br />
	
	<!-- </div>
	<hr/> -->
	<%= paginate @people %>
	<% @people.each do |person| %>
		<div class="person_info_index">
			<div class="person_photo_index">
				<%= link_to image_tag(person.avatar.url(:medium)), person %>
			</div>
			<div class="person_info_text_index">
	
				<p>
				  <b>昵称:</b>
				  <%= link_to person.nick_name, person %>
				</p>
				<p>
				  <b>城市:</b>
				  <%= person.city %>
				</p>

				<p>
				  <b>用户组:</b>
				  <%= person.role %>
				</p>
				<p>
				  <b>积分:</b>
				  <%= person.score %>
				</p>
				<p>
				  <b>等级:</b>
				  <%= person.rank %>
				</p>
				<% if is_admin? %>
					<%= link_to '编辑', edit_person_path(person) %>	
				<% end %>

			</div>
		</div>		
	<% end %>
	
	<hr />
	<%= paginate @people %>
	<% if is_admin? %>
		<%= link_to '创建学员', new_person_path %>
	<% end %>
</div>