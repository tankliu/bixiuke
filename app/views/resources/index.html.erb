<% unless is_member? %>
	<div id="header_guanggao">
		<a href="http://item.taobao.com/item.htm?id=16817107913"><img src="/assets/guanggao.png" alt="泡妞秘籍购买链接" /></a>
	</div>
<% end %>

<div class="box">
	
	<div id="categories">	
		<ul>
			<li <%="class='selected'" if @path == nil  %>><%= link_to "所有资源", resources_path %></li>
			<% @categories.each do |category| %>
			<li <%="class='selected'" if @path == category.path  %>><%= image_tag category.avatar.url(:thumb) %><%= link_to category.name, category_resources_path(:path => category.path) %></li>
			<% end %>
		</ul>
	</div>
	
	<div id="content">		
				<div id="notice"><%= flash[:notice] || flash.now[:notice] %></div>	
					
				<h2>分享资源(+3积分)</h2>
				<% if is_member? %>
					<%= render :partial => 'form'  %>
				<% else %>
					<div class="note_notice">只有学员才可以创建资源分享, <%= link_to "成为学员", :join %>, 是学员的请<%= link_to "登录", :login  %></div>
				<% end %>
				<h2>最近资源分享</h2>
				<% unless is_member? %>
					<div class="note_notice">只有学员才可以下载</div>
				<% end %>
				
				
				<% @resources.each do |resource| %>
					<div class="topic_person_photo">
						<%= image_tag resource.category.avatar.url(:medium) %>
					</div>
					<div class="topic_title"><%= link_to truncate(resource.title,:length => 35), resource %></div>
					<br /><br />
					<div class="topic_meta">发布:<%= link_to resource.person.nick_name, resource.person %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;类别:<%= link_to resource.category.name, category_resources_path(:path => resource.category.path) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;时间:<%= resource.created_at.to_date.to_s %>
					</div>

					<div class="topic_edit_bar">
						<% if is_admin? %>
								<%= link_to 'X', resource, :data => { :confirm => '确定删除?' }, method: :delete %>
						<% end %>
						
						<%= link_to "去下载或评论(#{resource.comments.size})", resource  %>
					</div>
					<hr />
				<% end %>
				<%= paginate @resources %>		
			
	</div>

	
</div>  <!-- end of box -->


