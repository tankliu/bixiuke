	<h4>请输入email账号和密码登录,如果没有账号,请先<a href="/people/new">注册</a></h4>
	<% if notice %>
			<div class="alert">
			  <button type="button" class="close" data-dismiss="alert">&times;</button>
			  <%= notice %>
			</div>
		<% end %>


	<%= form_tag :login, :class => "form-horizontal" do |f| %>
	<div class="control-group">
		<div class="control-label">
	    <%= label_tag :email, "邮箱" %>
		</div>
		<div class="controls">
	    <%= text_field_tag :email %>
			
		</div>
	</div>
	<div class="control-group">
		<div class="control-label">
	    <%= label_tag :password, "密码" %>
		</div>
		<div class="controls">
	    <%= password_field_tag :password %>
		</div>
	</div>
	
	<div class="control-group">
		<div class="controls">
		  <%= submit_tag "提交", :class => "btn btn-primary ie6-btn" %>
		</div>
	</div>
	


	<% end %>
