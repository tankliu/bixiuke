<% content_for :title,"测试你的情商" %>
<% content_for :keywords,"情感测试,性爱测试" %>
<% content_for :description,"测试你的情商,测试你性商,泡妞学测试" %>

<script>
	$(document).ready(function() {
		$('#new_testing').hide();
		$('.create_testing_button').click(function() {
			$('#new_testing').slideToggle();
			var text = $(this).text() == '创建测试' ? '取消创建' : '创建测试';
			$(this).text(text);
		});
	
		$('form').on('submit', function(e) {
			$(this).parent().find(".notice_answer").append('<div class="notice">'+"答案"+'</div>');
		});
		
	});
	
</script>

<% unless is_member? %>
	<div id="header_gaoguang">
		<a href="/guangpan"><img src="/assets/gaoguang.png" alt="专业约会指导教程" /></a>
	</div>
<% end %>
<div class="box">	
		
	<div id="content">
		<% if notice %>
			<div id="notice"><%= notice %></div>
		<% end %>
		<% if is_member? %>
			<%= button_tag(:type => 'button', :class => "create_testing_button") do %>创建测试<% end %>
			<%= render 'form'  %>
		<% end %>
		
		<h2>最新测试</h2>

		<% @testings.each do |testing| %>
			<div class="entry_person_photo">
				<%= image_tag testing.person.avatar.url(:thumb) %>
			</div>
			<div class="entry_title"><%=  link_to testing.title, testing %></div>
			<br /><br />
			<div class="entry_meta">发布:<%= link_to testing.person.nick_name, testing.person %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;时间:<%= testing.created_at.to_date.to_s %>
			</div>

			<div class="entry_content"><%= simple_format testing.content %></div>
			
			
			<div class="entry_content">
				<div class="notice_answer" id="notice_answer_<%= testing.id %>"></div>
				<%= form_tag :test, :remote => true do |f| %>
					<% testing.options.each_with_index do |option,index| %>
						<div class="field">
							<%= radio_button_tag "answer",ApplicationHelper::IndexToLetter[index], false %>		
							<%= ApplicationHelper::IndexToLetter[index] %>.<%= label_tag "answer", option.content %>
						</div>
						<div class="field">
							<%= hidden_field_tag "testing_id",testing.id %>		
						</div>
					<% end %>
					<div class="field">
						<%= submit_tag "提交" %>
					</div>	
				<% end %>
			</div>
			
			<div class="entry_edit_bar">
				<div class="right_text">
				<%= link_to "详细(#{testing.comments.size})", testing, :target => "_blank" %>
				</div>
			</div>
			<hr />
		<% end %>
		<%= paginate @testings %>		
	</div>
	
</div>

