<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "错误") %> :</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <br />
  <div class="field">
    <%= f.label :title, "1到2句话概括问题(不超过50字)" %><br />
    <%= f.text_field :title, :size => "100" %>
  </div>
  <div class="field">
    <%= f.label :content, "详细内容(至少100字,最多1000字,便于分析)" %><br />
    <%= f.text_area :content, :size => "72x15" %>
  </div>
  <div class="field">
    <%= f.hidden_field :group_id, :value => group_id %>
  </div>


  <div class="actions">
    <%= f.submit "写好了,提交!" %>
  </div>
<% end %>

