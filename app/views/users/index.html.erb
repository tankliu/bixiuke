<div class="box">
	<h2>泡妞学网学员和老师,助教(非学员不显示)</h2>
 	<p id="notice"><%= notice %></p>
	<div class="order_way">
		<ul class="public_nav">
			<li <%="class='selected'" if @order_way == "score" %> >
				<%= link_to "积分排行", users_path(:order_way => "score") %>
			</li>
			
			<li <%="class='selected'" if @order_way == "join_time" %> >
				<%= link_to "最新加入", users_path(:order_way => "join_time") %>
			</li>
			
			<li <%="class='selected'" if @order_way == "city" %> >
				<%= link_to "按城市排序", users_path(:order_way => "city") %>
			</li>
		</ul>
	</div>
	<br><br><br>
	<% @users.each do |user| %>
		<div class="user_info_index">
			<div class="user_photo_index">
				<%= link_to image_tag(user.photo.url(:medium)), user %>
			</div>
			<div class="user_info_text_index">
	
				<p>
				  <b>昵称:</b>
				  <%= link_to user.nick_name, user %>
				</p>
				<p>
				  <b>城市:</b>
				  <%= user.city %>
				</p>

				<p>
				  <b>角色:</b>
				  <%= user.role %>
				</p>
				<p>
				  <b>积分:</b>
				  <%= user.score %>
				</p>
				<p>
				  <b>等级:</b>
				  <%= user.rank %>
				</p>
				<% if session[:user_id] == user.id or is_admin? %>
				<%= link_to '编辑', edit_user_path(user) %>
				<% end %>

			</div>
		</div>		
	<% end %>
	<hr />
	<% if is_admin? %>
		<%= link_to '创建学员', new_user_path %>
	<% end %>
</div>